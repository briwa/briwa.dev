{% set maincss %}{% include "styles/main.css" %}{% endset %}
{% set blogcss %}{% include "styles/blog.css" %}{% endset %}
{% set postcss %}{% include "styles/post.css" %}{% endset %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#000">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Briwa">
    <meta name="description" content="Briwa's personal website. Web developers usually have one. Or more.">
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/base-min.css">
    <link rel="stylesheet" href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css">
    <style>{{ maincss | cssmin | safe }}</style>
    <style>{{ blogcss | cssmin | safe }}</style>
    <style>{{ postcss | cssmin | safe }}</style>
    <title>briwa.dev posts</title>
<body>
    <main class="content">
        <header>
            <h1>{{ title }}</h1>
            <time>{{ page.date }}</time>
            {% if original_url %}
            <h4>Originally posted on <a href="{{ original_url }}" target="_blank" rel="noreferrer">{{ original_url }}</a></h4>
            {% endif %}
            <hr>
        </header>
        <article class="markdown-body">
            {{ content | safe }}
        </article>
    </main>
</body>
</html>
